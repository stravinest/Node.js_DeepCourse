    <div class="wrap">
      <div class="form-group">
        <label for="exampleInputEmail1">닉네임</label>
        <input
          type="text"
          class="form-control"
          id="nickname"
          placeholder="Enter nickname"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input
          type="password"
          class="form-control"
          id="pwd"
          placeholder="Password"
        />
