    <script type="text/JavaScript" src="./api.js"></script>
    <title>CRUD 주특기 심화과제</title>

    <script>
      let user; //전역변수 user 선언
      // getSelf(function (u) {
      //   user = u;
      // });

      $(document).ready(function () {
        get_posts();
      });

      // Posts를 가져온다.
      function get_posts() {
        $('#card-box').empty(); // 상품창의 리스트를 삭제한다.
        $.ajax({
          type: 'GET',
          url: `/api/getPosts`,
          headers: {
            authorization: `Bearer ${localStorage.getItem('token')}`,
          },
          success: function (response) {
            let posts = response['result'];
            for (let i = 0; i < posts.length; i++) {
              const nickname = posts[i]['nickname'];
              const content = posts[i]['content'];
              make_post(nickname, content);
            }
          },
        });
      }
      // 가져온 Posts를 Table Rows로 삽입한다.
      function make_post(nickname, content) {
        let temp_html = `
        <div class="card wrap">
      <div class="card-header">${nickname}</div>
      <div class="card-body">
        <p class="card-text">${content}</p>
        <a href="#" class="btn btn-primary location">수정</a>
        <a href="#" class="btn btn-primary">댓글쓰기</a>
      </div>
    </div>`;
        $('#card-box').append(temp_html);
      }

      // write=()=>{
      //   window.location.href="./write";
      // };
    </script>
    <style>
      .card {
        cursor: pointer;
      }
      html {
        overflow: auto;
      }
      .wrap {
        width: 500px;
        margin: 10px auto;
        padding: 10px;
      }
      .location {
        margin-left: 250px;
      }
      .height {
        height: 180px;
      }
    </style>
  </head>
  <body>
    <section class="height hero is-info">
      <div class="hero-body">
        <p class="title">게시판 페이지</p>
        <a href="./write" class="btn btn-primary">글쓰기</a>
      </div>
    </section>

    <div id="card-box">
      <div class="card wrap">
        <div class="card-header">작성자</div>
        <div class="card-body">
          <p class="card-text">text</p>
          <a href="#" class="btn btn-primary location">수정</a>
          <a href="#" class="btn btn-primary">댓글쓰기</a>
        </div>
      </div>
    </div>
  </body>
